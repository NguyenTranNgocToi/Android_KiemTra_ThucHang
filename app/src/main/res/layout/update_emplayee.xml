<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"  android:background="@drawable/gradiant">


    <TextView
        android:id="@+id/tvUpEmloyee"
        android:layout_width="372dp"
        android:layout_height="71dp"
        android:layout_marginTop="48dp"
        android:text="UPDATE EMPLOYEE"
        android:textColor="#000000"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ed_name_up"
        android:layout_width="363dp"
        android:layout_height="65dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/backgroud_login"
        android:drawableStart="@drawable/avt"
        android:ems="10"
        android:hint="  Name"
        android:inputType="textPersonName"
        android:textColorHint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvUpEmloyee" />

    <EditText
        android:id="@+id/ed_age_up"
        android:layout_width="363dp"
        android:layout_height="65dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/backgroud_login"
        android:drawableStart="@drawable/chamhoi"
        android:ems="10"
        android:hint="  Age"
        android:inputType="textPersonName"
        android:textColorHint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_name_up" />

    <EditText
        android:id="@+id/ed_depart_up"
        android:layout_width="363dp"
        android:layout_height="65dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/backgroud_login"
        android:drawableStart="@drawable/depart"
        android:ems="10"
        android:hint="  Department"
        android:inputType="textPersonName"
        android:textColorHint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_age_up" />

    <Button
        android:id="@+id/btn_save_up"
        android:layout_width="363dp"
        android:layout_height="65dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#000000"
        android:text="SAVE"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_depart_up" />

    <Button
        android:id="@+id/btn_back_up"
        android:layout_width="363dp"
        android:layout_height="65dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#000000"
        android:text="BACK"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_save_up" />

</androidx.constraintlayout.widget.ConstraintLayout>