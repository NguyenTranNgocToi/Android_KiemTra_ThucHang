<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@drawable/gradiant">

    <View
        android:id="@+id/view"
        android:layout_width="409dp"
        android:layout_height="179dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/backgroud_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="MANAGER"
        android:textColor="#000000"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <Button
        android:id="@+id/btn_show_manager"
        android:layout_width="331dp"
        android:layout_height="65dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#000000"
        android:text="SHOW INFOMATION"

        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <Button
        android:id="@+id/btn_add_manager"
        android:layout_width="331dp"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#000000"
        android:text="ADD EMPLOYEE"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/btn_show_manager" />

    <Button
        android:id="@+id/btn_logout_manager"
        android:layout_width="112dp"
        android:layout_height="68dp"
        android:layout_marginTop="136dp"
        android:backgroundTint="#000000"
        android:text="LOGOUT"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_manager" />
</androidx.constraintlayout.widget.ConstraintLayout>