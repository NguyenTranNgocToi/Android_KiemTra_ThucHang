<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"  android:background="@drawable/gradiant">


    <TextView
        android:id="@+id/tvAddEmloyee"
        android:layout_width="372dp"
        android:layout_height="71dp"
        android:layout_marginTop="16dp"
        android:text="ADD EMPLOYEE"
        android:textColor="#000000"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.589"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ed_name_add"
        android:layout_width="363dp"
        android:layout_height="65dp"
        android:layout_marginTop="116dp"
        android:background="@drawable/backgroud_login"
        android:drawableStart="@drawable/avt"
        android:ems="10"
        android:hint="  Name"
        android:inputType="textPersonName"
        android:textColorHint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAddEmloyee" />

    <EditText
        android:id="@+id/ed_age_add"
        android:layout_width="363dp"
        android:layout_height="65dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/backgroud_login"
        android:drawableStart="@drawable/chamhoi"
        android:ems="10"
        android:hint="  Age"
        android:inputType="textPersonName"
        android:textColorHint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_name_add" />

    <EditText
        android:id="@+id/ed_depart_add"
        android:layout_width="363dp"
        android:layout_height="65dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/backgroud_login"
        android:drawableStart="@drawable/depart"
        android:ems="10"
        android:hint="  Department"
        android:inputType="textPersonName"
        android:textColorHint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_age_add" />

    <Button
        android:id="@+id/btn_create_add"
        android:layout_width="363dp"
        android:layout_height="65dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#000000"
        android:text="CREATE"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_depart_add" />

    <Button
        android:id="@+id/btn_back_add"
        android:layout_width="363dp"
        android:layout_height="65dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#000000"
        android:text="BACK"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_create_add" />

</androidx.constraintlayout.widget.ConstraintLayout>